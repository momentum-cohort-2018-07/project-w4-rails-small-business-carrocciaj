<div class="album bg-light">
  <div class="container">
    <div class="row">
        <% @products.each do |product| %>
          
          <div class="card d-inline-block m-1" style="width: 30%;">
            <div>
          
              <% begin %>
                <%= image_tag(product.img_file, :class => "card-img-top border", :style => "width: 100%; height: 350px;") %>
              <% rescue %>
                <div class="border" style="width: 100%; height: 350px;"></div>
              <% end %>
            </div>
            <div class="card-body">
              
              <p class="card-text" style="font-size: .75rem">
                <%= product.item %>
              </p>
              <div class="d-flex justify-content-between align-items-center">
              <%= link_to "View Details", "/products/#{product.pid}/" %>
                <div>
                <% if product.condition == "very good" then %>
                Price: $<%= product.price %>
                <% elsif product.condition == "good" then %>
                Price: <s>$<%= product.price %></s> <span class="text-danger">$<%= (product.price.to_i * 0.9).to_i %></span>
                <% else %>
                :Price <s>$<%= product.price %></s> <span class="text-danger">$<%= (product.price.to_i * 0.8).to_i %></span>
                <% end %>
                </div>
                </div>
              </div>
                
            
            
          </div>
          
        <% end %>  
    </div>
  </div>
</div>